<Window x:Class="file_explorer.Rename"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:file_explorer"
        mc:Ignorable="d"
        Title="Rename" Height="126" Width="289" ResizeMode="NoResize" ShowInTaskbar="False" Topmost="True" WindowStartupLocation="CenterOwner">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="28"/>
            <RowDefinition Height="18"/>
            <RowDefinition Height="18"/>
            <RowDefinition Height="18"/>
            <RowDefinition Height="28"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="32"/>
            <ColumnDefinition Width="54"/>
            <ColumnDefinition Width="117"/>
            <ColumnDefinition Width="54"/>
            <ColumnDefinition Width="32"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="UI_textbox_name" TextWrapping="Wrap" Text="Rename" Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="3"/>
        <Button x:Name="UI_button_cancel" Grid.Column="1" Content="Cancel" Grid.Row="3" Click="UI_button_cancel_Click"/>
        <Button x:Name="UI_button_submit" Grid.Column="3" Content="Submit" Grid.Row="3" Click="UI_button_submit_Click"/>

    </Grid>
</Window>
